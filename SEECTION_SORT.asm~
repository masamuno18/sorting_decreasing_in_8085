;<<sorting using SELECTION METHOD>>
;SOTRING DATA IN MEMORY
MVI A,  06h
STA 0000
MVI A,  22H
STA 0001
MVI A,	35H
STA 0002
MVI A,	53H
STA 0003
MVI A,	44H
STA 0004
MVI A,	11H
STA 0005
MVI A,	88H
STA 0006

;SELECTION METHOD CODE FOR SORTING DATA 
	LXI SP,	1200
	LXI H,	0000
	MOV C,M 
DO: 	INX H
	MOV A,M
	CALL MAX
	CMP M
	JZ GO
	CALL SWAP
GO:	DCR C
	JNZ DO
	HLT
MAX:	PUSH H
	PUSH B
	DCR C
LOOP:	INX H
	CMP M 
	JNC SKIP
	MOV A,M
	MOV D,H
	MOV E,L
SKIP:	DCR C
	JNZ LOOP
	POP B
	POP H
	RET
SWAP:	PUSH PSW
	PUSH B
	LDAX D
	MOV B,A
	MOV A,M
	STAX D
	MOV M,B
	POP B
	POP PSW
	RET	